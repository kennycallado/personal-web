---
import "../../styles/style.css";

import Footer from "../../components/Footer.astro";
import Navbar from "../../components/layout/Navbar.astro";
import Head from "../../components/layout/Head.astro";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <Head title={title} />
  </head>

  <body>
    <Navbar />

    <article class="pt-20 bg-gray-400">
      <div class="mx-20 bg-gray-100">
        <div
          class="prose container mx-auto prose-headings:text-indigo-600 prose-h1:pt-5 prose-p:text-justify"
        >
          <slot />
        </div>
      </div>
    </article>

    <Footer />
  </body>
</html>
